        android:contentDescription="@string/add_symptom_button_description"
        android:drawableWidth="30dp"
        android:drawableHeight="24dp"
        android:drawableRight="@drawable/alarm"
        android:drawablePadding="20dp"
        android:text="   "
        android:textSize="20sp"
