<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textValue3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background = "@drawable/gradient">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/lunacat">



    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="123dp"
        android:layout_height="29dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/CalendarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="210dp"
        android:layout_height="94dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/speech_bubble"
        android:scaleX="-1"
        app:layout_constraintBottom_toTopOf="@+id/LogButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/nextPeriodTextView"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:text="    next period date:"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.136" />

        <Button
            android:id="@+id/EstimateButton"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/ic_add"
            android:contentDescription="@string/add_symptom_button_description"
            android:scaleX="-1"
            android:text="log"
            android:textSize="10sp" />

    </FrameLayout>

    <CalendarView
        android:id="@+id/CalendarView"
        android:layout_width="335dp"
        android:layout_height="311dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/gradient2"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LogButton"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_add"
        android:contentDescription="@string/add_symptom_button_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947"
        android:text="+"
        android:textSize="35sp" />


    <Button
        android:id="@+id/FoodButton"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/alarm_with_circle"
        android:contentDescription="@string/add_symptom_button_description"
        android:drawableRight="@drawable/baseline_fastfood_24"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <Button
        android:id="@+id/ReminderButton"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/alarm_with_circle"
        android:contentDescription="@string/add_symptom_button_description"
        android:drawableRight="@drawable/alarm"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />



